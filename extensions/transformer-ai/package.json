{
  "name": "transformer-ai",
  "displayName": "Transformer AI Extension",
  "description": "Uses Vercel AI SDK to deliver Transformer and VSCode chat experience",
  "version": "0.0.1",
  "publisher": "vscode",
  "license": "UNLICENSED",
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "chat": true
  },
  "enabledApiProposals": [
    "chatProvider",
    "defaultChatParticipant"
  ],
  "contributes": {
    "languageModels": [
      {
        "vendor": "transformer"
      }
    ],
    "chatParticipants": [
      {
        "id": "transformer.ai",
        "name": "assistant",
        "fullName": "Transformer AI",
        "description": "Transformer's chat participant",
        "isSticky": true,
        "isDefault": true
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "ai": "^4.1.40",
    "@ai-sdk/openai": "1.1.11"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}
